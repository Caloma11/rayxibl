{
  "background_color": "white",
  "description": "Reduce your headcount and headache by building your very own freelance workforce. Flxibl is the most efficient way to manage your network of freelancers. Sign up for free today.",
  "display": "fullscreen",
  "name": "Flxibl",
  "short_name": "Flxibl",
  "theme_color": "#f9fbfe",
  "start_url": ".",
  "orientation": "portrait",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/(apple|android|ms-icon|favicon|ms).+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      <% next unless match && match[:size] %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
