<h2>Invite a freelancer to join the your network</h2>
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name, inviter: "manager", invitee: "freelancer"), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-inputs">
        <%= f.input field %>
      </div>
    <% end -%>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.new.submit_button") %>
    </div>
  <% end %>

