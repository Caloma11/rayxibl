<div class="invitationsWrapper p-3 none">
  <div class="invitations-overlay"></div>
  <div class="fakeModal py-3">
    <%= link_to "#", id: "closeInvitationsWrapper" do %>
      <%= image_tag "icons/cross.svg", alt: "cross", class: "close-fake-modal", width: 18, height: 18 %>
    <% end %>
    <h1 class="text-center textLg mt-4">Email invites</h1>
    <div class="fakeModalInner flex flex-column items-center justify-content-around">
      <%= simple_form_for :invitation, url: user_invitation_path(inviter: "manager", invitee: "freelancer"), method: :post, remote: true do |f| %>
        <div class="form-group relative">
          <%= f.input :email, placeholder: "Email address..", label: false, input_html: { class: "relative", name: "user[email]"  } %>
          <%= button_tag type: "submit" do %>
            <%= image_tag "icons/person-add.svg", alt: "alttext", id: "invitation-add-btn", width: 20, height: 28, class: "mt-1 mr-2" %>
          <% end %>
        </div>
      <% end %>
      <!-- OR separator -->
      <div class="or-separator flex w-100 justify-content-center items-center">
        <div class="line"></div>
        <p>OR</p>
        <div class="line"></div>
      </div>
      <div class="csv-upload-container w-100 flex flex-column justify-content-center items-center">

        <%= simple_form_for :bulk_invitation, url: :bulk_invitation, method: :post do |f| %>
          <%= f.input :csv_file, as: :file, input_html: { accept: ".csv",class: 'none'}, label_html: { class: 'upload-csv'}, label: "#{(image_tag 'icons/starry-folder.svg', width: 128, height: 128)}".html_safe, required: false, wrapper_html: { class: "flex justify-content-center items-center"}  %>

        <div class="buttons none py-3">
          <div class="btn-centered btn-white mb-3 flex items-center justify-content-center w-100 border-box textBetween" >
            <div class="flex justify-content-center items-center textWhite flex-grow-1">
                <%= image_tag "icons/document.svg", width: 32, height: 32, class: "mr-2" %>
                <span id="csv_text_preview" class="uppercase textBlue border">my_freelancers.svg</span>
            </div>
          </div>

          <div class="btn-centered py-3 btn-primary mb-3 flex items-center justify-content-center w-100 border-box textBetween" id="upload-csv-btn">
            <div class="flex justify-content-center items-center textWhite flex-grow-1">
              <%= f.submit "SEND INVITES", class: "textWhite p-0" %>
            </div>
          </div>

        <% end %>
        </div>
        <p class="textMd invite-multiple textBlue bold text-center px-3">Invite multiple freelancers by uploading a CSV</p>
      </div>
    </div>
  </div>
</div>
