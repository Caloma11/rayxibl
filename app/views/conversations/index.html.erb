<div class="convo-index">
  <section class="head">
    <div style="width: 28px;"></div>
    <p class="semi-bold textBetween" id="inbox-title">INBOX (<%= @unread_messages_count %>)</p>
    <button id="filter-trigger" type="button"><%= image_tag "icons/filter.svg", alt: "filter" %></button>

    <div id="filter-content" class="none">
      <%= render partial: "conversations/filter_content", locals: { jobs: @jobs } %>
    </div>
  </section>

  <section class="switch flex justify-content-between px-3 py-2 my-3" style="background-color: #F9FBFE;">
    <%= link_to conversations_path, class: "flex items-center btn #{params[:all] ? 'btn-transparent' : 'btn-white'}", remote: true do %>
      <%= image_tag "icons/person-check", alt: "in network" %> My network
    <% end %>
    <%= link_to conversations_path(all: true), class: "flex items-center btn #{params[:all] ? 'btn-white' : 'btn-transparent'}", remote: true do %>
      <%= image_tag "icons/people-dark", alt: "everyone" %> Everyone
    <% end %>
  </section>

  <section id="conversations">
    <%= render partial: "conversations/snippets", locals: { conversations: @conversations } %>
  </section>
</div>
