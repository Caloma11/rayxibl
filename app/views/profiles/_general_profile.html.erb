<div class="generalProfile w-100">

  <div class="profileBanner" style="background-image: url(<%= avatar_url(@profile) %>)"></div>

  <!-- Name and description -->
  <div class="profileHeader">
    <div class="profileHeaderLeft">
      <h1><%= @profile.user.display_name %></h1>
      <p class="textGray"><%= @profile.profession %>, <%= @profile.location %></p>
    </div>
    <div class="profileHeaderRight">
      <div class="flex items-center justify-content-center mt-3">
        <div class="stars">
          <% @profile.average_rating.to_i.times do %>
            <%= image_tag "icons/colored-rating.svg", alt: "rating" %>
          <% end %>
          <% (5 - @profile.average_rating.to_i).times do %>
            <%= image_tag "icons/rating.svg", alt: "rating" %>
          <% end %>
          <span class="rating-size">(<%= @profile.ratings.size %>)</span>
          <p class="textGray uppercase semi-bold text-center textSm"><%= @profile.expertise %> level</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Buttons -->

  <!-- Add or Book button -->
  <div class="profileButtons flex justify-content-around p-3 pt-0">
    <% if current_user.manager? %>
      <% if @connection %>
        <%#= link_to "Remove from your network", connection_path(current_user.find_connection(@profile.user)), class: "mr-3", method: :delete %>
        <%= link_to new_profile_booking_path(@profile), class: "mr-3", class: "btn-lg px-0 btn-primary" do %>
          <%= image_tag "icons/schedule-white.svg", alt: "Book user" %>
          <p class="textWhite">BOOK</p>
        <% end %>
      <% else %>
        <%= link_to profile_connections_path(@profile) ,class: "mr-3 btn-lg px-0 btn-primary", method: :post, remote: true  do %>
          <%= image_tag "icons/user-plus.svg", alt: "Add user" %>
          <p class="textWhite">ADD</p>
        <% end %>
      <% end %>
      <div class="spacer">

      </div>

      <!-- Message Button -->
      <% conversation ||= current_user.conversation_with(@profile.user) %>
      <% if conversation %>
        <%= link_to conversation_path(conversation), class: "btn-lg px-0 btn-white" do %>
          <%= image_tag "icons/message.svg", alt: "message" %> Message
        <% end %>
      <% else %>
        <%= link_to profile_conversations_path(@profile, conversation: { profile_id: @profile.id }), method: :post, class: "btn-lg px-0 btn-white" do %>
          <%= image_tag "icons/message.svg", alt: "message" %> Message
        <% end %>
      <% end %>


  <% end %>

  </div>


  <!-- Skills -->
  <div class="container">
    <div class="profileSection  p-3" id="skills">
      <h3 class="small"><small class="textGray">KEY SKILLS</small></h3>
      <div class="flex justify-content-around skill-pills">
        <% @profile.skill_list.each do |skill| %>
          <span class="skill-pill"><%= skill %></span>
        <% end %>
      </div>
    </div>

    <!-- Tabs -->

    <div class="profileTabs" id="tabs">
      <%= link_to "About", profile_path(@profile, tab: 'about', anchor: 'skills'), id: "about-tab", class: "tab #{'active' if params[:tab] == 'about' || !params[:tab] }", remote: true %>
      <%= link_to "Links", profile_path(@profile, tab: 'links', anchor: 'skills'), id: "link-tab", class: "tab #{'active' if params[:tab] == 'links' }", remote: true %>
      <%= link_to "Notes (#{@notes.count})", profile_path(@profile, tab: 'notes', anchor: 'skills'), id: "note-tab", class: "tab #{'active' if params[:tab] == 'notes' }", remote: true %>
    </div>

    <div class="p-3" id="tab-content">
      <%= render "#{params[:tab] || 'about' }_content" %>
    </div>

  </div>
</div>


