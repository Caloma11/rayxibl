<div class="profiles-index" style="margin-top: 20%;">
  <div class="switch">
    <%= link_to "My network", profiles_path(network: true), class: "#{'active' if params[:network]}" %>
    <%= link_to "Everyone", profiles_path %>
  </div>

  <section>
    <% if params[:network] %>
      <% if @profiles.size.positive? %>
        <% @profiles.each do |profile| %>
          <%= render partial: "profiles/card", locals: { profile: profile, invitation: false } %>
        <% end %>
      <% else %>
        <h2>You don't have any freelancers in your network</h2>
      <% end %>
    <% else %>
      <% @profiles.each do |profile| %>
        <%= render partial: "profiles/card", locals: { profile: profile, invitation: true } %>
      <% end %>
    <% end %>
  </section>
</div>
