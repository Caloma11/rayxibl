<div class="flex items-center mb-3">
  <% profile.average_rating.to_i.times do %>
    <%= render partial: "ratings/colored_star" %>
  <% end %>
  <% (5 - profile.average_rating.to_i).times do %>
    <%= render partial: "ratings/star" %>
  <% end %>

  <span class="rating-size textSm">(<%= profile.ratings.size %>)</span>
</div>

<p class="textLightBlack mb-0 uppercase semi-bold text-center textSm"><%= profile.expertise %> level</p>
