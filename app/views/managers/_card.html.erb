<div class="manager-card">
  <div class="flex justify-content-between items-start">
    <button style="opacity: 0; user-select: none; width: 36px; height: 36px"></button>
    <div>
      <%= image_tag manager_avatar(manager), alt: "manager avatar", class: "avatar avatar-square" %>
    </div>
    <div class="relative">
      <div class="none actions-container" data-id="<%= manager.id %>">
        <div class="actions flex flex-column bookings-index">
          <%= button_to connection_as_fl_path(current_user.find_connection(manager.user)), class: "action-link text-start w-100 textMd", method: :delete do %>
            <%= image_tag "icons/trash-white.svg", alt: "trash icon", width: 24, height: 24, class: "pb-1 vertical-align-middle mr-2" %>
            Remove
          <% end %>
        </div>
      </div>
      <button data-id="<%= manager.id %>" class="trigger"><%= image_tag "icons/more.svg", alt: "sub-menu", width: 18, height: 18 %></button>
    </div>
  </div>
  <div class="text-center">
    <h3 class="mt-0 mb-3 textMd"><%= manager.user.display_name %></h3>
    <p class="semi-bold uppercase textLightBlack my-0"><%= manager.job_title %></p>
    <p class="textSm textLightBlack my-0"><%= manager.company.name %></p>
  </div>
  <% convo ||= current_user.conversation_with(manager.user) %>
  <% if convo %>
    <%= link_to conversation_path(convo, anchor: "message-#{convo.messages.last&.id}"), class: "btn btn-white textSm text-center mt-3" do %>
      <%= image_tag "icons/message.svg", alt: "message", width: 16, height: 16, class: "vertical-align-middle" %> Message
    <% end %>
  <% end %>
</div>
