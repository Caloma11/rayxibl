<div id="managers-index">
  <section class="head">
    <button>
      <%= image_tag "icons/search.svg", alt: "search", class: "opaque" %>
    </button>
    <div class="flex flex-column items-center justify-content-center">
      <p id="manager-title" class="m-0">CLIENTS (<%= @managers.length %>)</p>
      <span class="textSm textLightBlack">Managers who have added you</span>
    </div>
    <button id="filter-trigger">
      <%= image_tag "icons/filter.svg", alt: "filter" %>
    </button>
  </section>

  <div id="manager-cards">
    <%= render partial: "managers/cards", locals: { managers: @managers } %>
  </div>

  <div class="add-more flex flex-column items-center justify-content-center">
    <p class="text-center textBlue bold textLg">Get more clients by sharing your profile </p>
    <%= image_tag "icons/phone-hand.svg", alt: "phone-hand", width: 312, height: 312 %>
  </div>

  <div class="none" id="filter-content">
    <%= render partial: "managers/filter_content" %>
  </div>
</div>
